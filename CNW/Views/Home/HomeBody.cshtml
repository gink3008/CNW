@model IEnumerable<CNW.Models.Entities.ProductDetail>
<section class="product-filter-section">
    <div class="container">
        <div class="section-title">
            <h2>BROWSE TOP SELLING PRODUCTS</h2>
        </div>
        <ul class="product-filter-menu">
            <li><a href="#">TOPS</a></li>
            <li><a href="#">JUMPSUITS</a></li>
            <li><a href="#">LINGERIE</a></li>
            <li><a href="#">JEANS</a></li>
            <li><a href="#">DRESSES</a></li>
            <li><a href="#">COATS</a></li>
            <li><a href="#">JUMPERS</a></li>
            <li><a href="#">LEGGINGS</a></li>
        </ul>
        <div class="row">
            @foreach (var item in Model)
            {
                
                    <div class="col-lg-3 col-sm-6">
                        <div class="product-item">
                            <div class="pi-pic">
                                <a href="/Product">
                                    @foreach (var img in item.Images)
                                    {
                                        if (img.Official == true)
                                        {
                                            <img src="~/Content/img/@img.url" alt="">
                                        }
                                    }
                                </a>
                                <div class="pi-links">
                                    <a href="/Product/Index/@item.Id" class="add-card"><i class="flaticon-bag"></i><span>ADD TO CART</span></a> <!-- gọi đến controller cart-->
                                    <a href="#" class="wishlist-btn"><i class="flaticon-heart"></i></a> <!-- gọi tới hàm like (chưa thiết kế)-->
                                </div>
                            </div>
                            <div class="pi-text">
                                <h6>@item.Product.Price</h6>
                                <p>@item.Product.Name</p>
                            </div>
                        </div>
                    </div>
                

            }


        </div>
        <div class="text-center pt-5">
            <button class="site-btn sb-line sb-dark">LOAD MORE</button>
        </div>
    </div>
</section>
