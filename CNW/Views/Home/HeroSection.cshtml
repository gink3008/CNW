@model List<CNW.Models.Entities.Product>
<div class="hero-section">
    <div class="hero-slider owl-carousel owl-loaded owl-drag">
        <div class="owl-stage-outer">
            <div class="owl-stage" style="transform: translate3d(-3806px, 0px, 0px); transition: all 0s ease 0s; width: 11418px;">
                @foreach (var item in Model)
                {
                    <div class="owl-item cloned" style="width: 1903px;">
                        <div class="hs-item set-bg" data-setbg="/Content/img/bg.jpg" style="background-image: url(&quot;img/bg.jpg&quot;);">
                            <div class="container">
                                <div class="row">
                                    <div class="col-xl-6 col-lg-7 text-white">
                                        <span>New Arrivals</span>
                                        <h2>@item.Name</h2>
                                        <p>@item.</p>
                                        <a href="#" class="site-btn sb-line">DISCOVER</a>
                                        <a href="#" class="site-btn sb-white">ADD TO CART</a>
                                    </div>
                                </div>
                                <div class="offer-card text-white">
                                    <span>from</span>
                                    <h2>$@item.Price</h2>
                                    <p>SHOP NOW</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div><div class="slider-nav-warp"><div class="slider-nav"><div class="owl-nav"><button type="button" role="presentation" class="owl-prev"><i class="flaticon-left-arrow-1"></i></button><button type="button" role="presentation" class="owl-next"><i class="flaticon-right-arrow-1"></i></button></div><div class="owl-dots"><button role="button" class="owl-dot active"><span></span></button><button role="button" class="owl-dot"><span></span></button></div></div></div>
    </div>
    <div class="container">
        <div class="slide-num-holder" id="snh-1"><span> 1</span><span>2</span></div>
    </div>
</div>
